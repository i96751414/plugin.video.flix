<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- 1280 x 720 -->
    <include>Animation_DialogPopupOpenClose</include>
    <defaultcontrol always="true">32503</defaultcontrol>
    <depth>DepthOSD</depth>
    <controls>
        <control type="group">
            <!-- Background -->
            <control type="image">
                <left>190</left>
                <top>50</top>
                <width>900</width>
                <height>620</height>
                <texture colordiffuse="F0F0F0F0">AddonWindow/black.png</texture>
            </control>
            <!-- Close button -->
            <control type="button" id="32500">
                <left>1040</left>
                <top>68</top>
                <width>32</width>
                <height>32</height>
                <texturefocus colordiffuse="button_focus">Button/close.png</texturefocus>
                <texturenofocus colordiffuse="EEFFFFFF">Button/close.png</texturenofocus>
                <onup>32508</onup>
                <ondown>32502</ondown>
                <onleft>32503</onleft>
                <onright>32503</onright>
            </control>
            <!-- Window title -->
            <control type="label" id="32501">
                <left>290</left>
                <top>75</top>
                <width>700</width>
                <height>30</height>
                <font>font14</font>
                <align>center</align>
                <aligny>center</aligny>
                <scroll>true</scroll>
                <textcolor>white</textcolor>
                <shadowcolor>AA000000</shadowcolor>
            </control>
            <!-- Scrollbar -->
            <control type="scrollbar" id="32502">
                <left>1055</left>
                <top>140</top>
                <width>10</width>
                <height>520</height>
                <onup>32500</onup>
                <onleft>32503</onleft>
                <showonepage>false</showonepage>
                <orientation>vertical</orientation>
            </control>
            <!-- Panel -->
            <control type="panel" id="32503">
                <left>215</left>
                <top>140</top>
                <width>815</width>
                <height>520</height>
                <onup>32503</onup>
                <ondown>32503</ondown>
                <onleft>32500</onleft>
                <onright>32502</onright>
                <align>center</align>
                <viewtype>list</viewtype>
                <pagecontrol>32502</pagecontrol>
                <scrolltime tween="cubic" easing="inout">250</scrolltime>
                <itemlayout height="65" width="815">
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>50</width>
                        <height>50</height>
                        <texture fallback="media.png">$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>70</left>
                        <top>2</top>
                        <width>740</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <scroll>true</scroll>
                        <textcolor>white</textcolor>
                        <shadowcolor>AA000000</shadowcolor>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <left>70</left>
                        <top>28</top>
                        <width>740</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <scroll>true</scroll>
                        <textcolor>FF666666</textcolor>
                        <shadowcolor>AA000000</shadowcolor>
                        <info>ListItem.Label2</info>
                    </control>
                </itemlayout>
                <focusedlayout height="65" width="815">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>815</width>
                        <height>60</height>
                        <texture>List/focus.png</texture>
                    </control>
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>50</width>
                        <height>50</height>
                        <texture fallback="media.png">$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>70</left>
                        <top>2</top>
                        <width>740</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <scroll>true</scroll>
                        <textcolor>white</textcolor>
                        <shadowcolor>AA000000</shadowcolor>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <left>70</left>
                        <top>28</top>
                        <width>740</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <scroll>true</scroll>
                        <textcolor>FF888888</textcolor>
                        <shadowcolor>AA000000</shadowcolor>
                        <info>ListItem.Label2</info>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
