<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <!-- General -->
    <category label="30000">
        <setting id="cache_enabled" type="bool" label="30001" default="true"/>
        <setting id="cache_expiration" type="slider" label="30002" option="int" range="1,1,30" default="14"
                 visible="eq(-1,true)"/>
        <setting id="language" label="30003" type="select" default="en"
                 values="ar-AE|ar-SA|bg|bn|ca|ch|cs|da|de|el|en|eo|es-ES|es-MX|eu|fa|fi|fr-CA|fr-FR|he|hi|hu|id|it|ja|ka|kn|ko|lt|ml|nb|nl|no|pl|pt-BR|pt-PT|ro|ru|sk|sl|sr|sv|ta|te|th|tr|uk|vi|zh-CN|zh-TW"/>
        <setting id="prefer_original_titles" type="bool" label="30004" default="true"/>
        <setting id="providers_timeout" type="slider" label="30006" option="int" range="10,1,30" default="10"/>
        <setting id="resolve_timeout" type="slider" label="30008" option="int" range="30,30,600" default="300"/>
        <setting id="include_adult_content" type="bool" label="30007" default="false"/>
        <setting label="30005" type="action" action="InstallAddon(plugin.video.youtube)"
                 visible="!System.HasAddon(plugin.video.youtube)"/>
    </category>
    <category label="OpenSubtitles">
        <setting id="os_username" label="30009" type="text" default=""/>
        <setting id="os_password" label="30010" type="text" option="hidden" default=""/>
        <setting id="os_folder" label="30011" type="folder" source="auto" option="writeable"/>
    </category>
</settings>
